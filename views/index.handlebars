<h1>Burgers</h1>

<ul>
  {{#each burgers}}
  	<li>
       <p>{{this.burger_name}}</p>
  	</li>
  {{/each}}
</ul>

<div>
  <form action="/" method="POST">
  	<textarea type="text" name="burger_name" id="textArea"></textarea>

  	<button type="submit" id="submitButton">Submit</button>
  </form>
</div>