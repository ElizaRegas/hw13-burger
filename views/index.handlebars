<h1>Burgers</h1>

<div>
  <ul>
    {{#each burgers}}
    <li>
      <button data-id="{{id}}" data-devoured="{{devoured}}">Devour!</button>
      <p>{{this.burger_name}} </p>
    </li>
    {{/each}}
  </ul>
</div>

<div>
  <form action="/" method="POST">
    <textarea type="text" name="burger_name" class="textArea"></textarea>

    <button type="submit" class="submitButton">Submit</button>
  </form>
</div>